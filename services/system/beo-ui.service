[Unit]
Description=BeoSound5c Chromium UI kiosk
After=network.target beo-http.service
Wants=network.target beo-http.service
Requires=beo-http.service

[Service]
Type=simple
User=__USER__
Group=__USER__
WorkingDirectory=__HOME__/beosound5c/services
ExecStart=__HOME__/beosound5c/services/ui.sh
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 
